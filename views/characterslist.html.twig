{% extends '/layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            Assistant GODS
        </div>
        <div class="card-body chat-body">
            <div id="charabox" class="row justify-content-around">
                <div id="newCharacter" class="character-card col-3 bg-dark">
                    <h3 class="newbutton">New Character</h3>
                    <img src="public/images/plus.png" class="plussign">
                </div>
                {% for character in characters %}
                    <div id={{ character.id_Character }} class="character-card col-3 bg-dark charactersheet" onclick="redirectToCharacterPage({{ character.id_Character }})">
                        <h2>{{ character.nom }}</h2>
                        <p>ID: {{ character.id_Character }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
   <script src="js/characterslist.js"></script>
<link rel="stylesheet" href="css/characterslist.css">
{% endblock %}